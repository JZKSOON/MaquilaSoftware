<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.DatePicker?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1300.0" style="-fx-background-color: #2a5277;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ViewsAdm.CortesViewController">

    <!-- Panel izquierdo: formulario -->
    <VBox spacing="8" prefWidth="250.0" padding="10">
        <Label text="Registro Cortes" textFill="WHITE">
            <font>
                <Font name="Franklin Gothic Heavy" size="27.0"/>
            </font>
        </Label>

        <Label text="ID" textFill="WHITE"/>
        <TextField fx:id="idCortesField" promptText="1, 2, etc..."/>

        <Label text="Numero de Corte" textFill="WHITE"/>
        <TextField fx:id="NumCorteField"/>

        <Label text="Cantidad" textFill="WHITE"/>
        <TextField fx:id="CantidadField"/>

        <Label text="Marca" textFill="WHITE"/>
        <TextField fx:id="MarcaField"/>

        <Label text="Linea" textFill="WHITE"/>
        <TextField fx:id="LineaField"/>

        <Label text="Tipo de Tela" textFill="WHITE"/>
        <TextField fx:id="TipoTelaField"/>

        <Label text="Fecha de Trazo" textFill="WHITE"/>
        <DatePicker fx:id="TrazoField"/>

        <Label text="Fecha Tela" textFill="WHITE"/>
        <DatePicker fx:id="FechTela"/>

        <Label text="Tela Llegó" textFill="WHITE"/>
        <ComboBox fx:id="LlegTela" prefWidth="150.0"/>

        <HBox spacing="10">
            <Button text="Guardar" onAction="#guardarCortes"/>
            <Button text="Actualizar" onAction="#actualizarCortes"/>
            <Button text="Eliminar" onAction="#eliminarCortes"/>
        </HBox>
    </VBox>

    <!-- Panel derecho: tabla -->
    <VBox spacing="8" padding="10" HBox.hgrow="ALWAYS">
        <TableView fx:id="cortesTable" prefWidth="1000.0">
            <columns>
                <TableColumn fx:id="idCortesColumn" text="ID"/>
                <TableColumn fx:id="NumCorteColumn" text="Número de Corte" prefWidth="120.0"/>
                <TableColumn fx:id="CantidadColumn" text="Cantidad" prefWidth="100.0"/>
                <TableColumn fx:id="MarcaColumn" text="Marca" prefWidth="100.0"/>
                <TableColumn fx:id="LineaColumn" text="Linea" prefWidth="100.0"/>
                <TableColumn fx:id="TipoTelaColumn" text="Tipo Tela" prefWidth="100.0"/>
                <TableColumn fx:id="TrazoColumn" text="Trazo" prefWidth="100.0"/>
                <TableColumn fx:id="FechTelaColumn" text="Fecha Tela" prefWidth="100.0"/>
                <TableColumn fx:id="LlegTelaColumn" text="Llegó Tela" prefWidth="100.0"/>
            </columns>
        </TableView>
    </VBox>
</HBox>
