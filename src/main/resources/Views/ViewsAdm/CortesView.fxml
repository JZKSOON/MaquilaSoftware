<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="800.0" prefWidth="1300.0" style="-fx-background-color: #2a5277;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ViewsAdm.CortesViewController">

    <children>
        <!-- Panel izquierdo: formulario -->
        <VBox prefWidth="250.0" spacing="8">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label text="Registro Cortes" textFill="WHITE">
                    <font><Font name="Franklin Gothic Heavy" size="27.0" /></font>
                </Label>

                <Label text="ID" textFill="WHITE" />
                <TextField fx:id="idCortesField" promptText="1, 2, etc..." />

                <Label text="Número de Corte" textFill="WHITE" />
                <TextField fx:id="NumCorteField" />

                <Label text="Cantidad Programada" textFill="WHITE" />
                <TextField fx:id="CantidadField" />

                <Label text="Marca" textFill="WHITE" />
                <TextField fx:id="MarcaField" />

                <Label text="Línea" textFill="WHITE" />
                <TextField fx:id="LineaField" promptText="Dama, Caballeros, Niños" />

                <Label text="Tipo de Tela" textFill="WHITE" />
                <TextField fx:id="TipoTelaField" />

                <HBox spacing="10">
                    <children>
                        <Button onAction="#guardarCortes" text="Guardar" />
                        <Button onAction="#actualizarCortes" text="Actualizar" />
                        <Button onAction="#eliminarCortes" text="Eliminar" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Panel derecho: tabla -->
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <TableView fx:id="cortesTable" prefWidth="1000.0">
                    <columns>
                        <TableColumn fx:id="idCortesColumn" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="NumCorteColumn" prefWidth="120.0" text="Número de Corte" />
                        <TableColumn fx:id="CantidadColumn" prefWidth="100.0" text="Cantidad" />
                        <TableColumn fx:id="MarcaColumn" prefWidth="100.0" text="Marca" />
                        <TableColumn fx:id="LineaColumn" prefWidth="100.0" text="Línea" />
                        <TableColumn fx:id="TipoTelaColumn" prefWidth="100.0" text="Tipo Tela" />
                        <TableColumn fx:id="TrazoColumn" prefWidth="100.0" text="Trazo" />
                        <TableColumn fx:id="FechTelaColumn" prefWidth="100.0" text="Fecha Tela" />
                        <TableColumn fx:id="LlegTelaColumn" prefWidth="100.0" text="Llegó Tela" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</HBox>
