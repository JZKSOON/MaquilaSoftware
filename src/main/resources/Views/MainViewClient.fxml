                        <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children></VBox>
            </children>
        </VBox>
    </left>

    <!-- Centro -->
    <center>
        <AnchorPane style="-fx-background-color: #2a5277;">
            <children>
                <!-- TÃ­tulo adaptativo -->
