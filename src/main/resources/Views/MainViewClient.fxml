                        <ImageView fitHeight="22.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
                  <Button fx:id="btnCliente" mnemonicParsing="false" onAction="#btnCliente" prefHeight="26.0" prefWidth="364.0" text="Cliente">
