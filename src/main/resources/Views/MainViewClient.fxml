                <VBox style="-fx-background-color: #1c3f60;" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="btnInicio" mnemonicParsing="false" onAction="#btnInicio" prefHeight="26.0" prefWidth="364.0" text="Inicio">
