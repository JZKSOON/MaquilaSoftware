                <!-- Panel grande izquierdo -->
                <Pane style="-fx-background-color: #ffffff;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="350.0" AnchorPane.topAnchor="150.0" />

                <!-- Panel superior derecho -->
                <Pane prefHeight="390.0" prefWidth="268.0" style="-fx-background-color: #ffffff;" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="150.0" />

                <!-- Panel inferior derecho -->
                <Pane prefHeight="390.0" prefWidth="268.0" style="-fx-background-color: #ffffff;" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="30.0" />
            </children>
        </AnchorPane>
